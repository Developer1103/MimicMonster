<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backview"
    tools:context=".LearningActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutAds">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="450dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/itembox" />

                <ImageView
                    android:id="@+id/viewitem"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/san"
                    android:layout_marginTop="90dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTrans"
                    android:text="@string/backtocourse"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginTop="200dp"
                    android:layout_marginRight="85dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />


                <ImageView
                    android:id="@+id/item1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="37dp"
                    android:src="@drawable/item1"
                    android:layout_marginTop="254dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="97dp"
                    android:src="@drawable/item2"
                    android:layout_marginTop="254dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item3"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="157dp"
                    android:src="@drawable/item3"
                    android:layout_marginTop="254dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item4"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="217dp"
                    android:src="@drawable/item4"
                    android:layout_marginTop="254dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item5"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="37dp"
                    android:src="@drawable/item5"
                    android:layout_marginTop="318dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item6"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="97dp"
                    android:src="@drawable/item6"
                    android:layout_marginTop="318dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item7"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="157dp"
                    android:src="@drawable/item7"
                    android:layout_marginTop="318dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item8"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="217dp"
                    android:src="@drawable/item8"
                    android:layout_marginTop="318dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item9"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="37dp"
                    android:src="@drawable/item9"
                    android:layout_marginTop="382dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item10"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="97dp"
                    android:src="@drawable/item10"
                    android:layout_marginTop="382dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item11"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="157dp"
                    android:src="@drawable/item11"
                    android:layout_marginTop="382dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item12"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="217dp"
                    android:src="@drawable/item12"
                    android:layout_marginTop="382dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutAds"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorWhite">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/unitid"
            ads:layout_constraintLeft_toRightOf="parent"
            ads:layout_constraintRight_toLeftOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent">
        </com.google.android.gms.ads.AdView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>