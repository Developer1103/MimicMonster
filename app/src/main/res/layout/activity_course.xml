                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground" />

            <Button
                android:id="@+id/btnCourse9"
                android:layout_width="match_parent"
