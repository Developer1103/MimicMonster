                android:layout_height="25dp"
                android:background="@drawable/langage"
                android:scaleType="fitCenter"
                android:paddingLeft="20dp"
                android:textColor="@color/colorCourse"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground" />

            <Button
                android:id="@+id/btnCourse10"
                android:layout_width="match_parent"
                android:text="@string/course10"
                android:layout_height="25dp"
                android:background="@drawable/langage"
                android:scaleType="fitCenter"
                android:paddingLeft="20dp"
                android:textColor="@color/colorCourse"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground" />

            <Button
                android:id="@+id/btnCourse11"
                android:layout_width="match_parent"
                android:text="@string/course11"
                android:layout_height="25dp"
                android:background="@drawable/langage"
                android:scaleType="fitCenter"
                android:paddingLeft="20dp"
                android:textColor="@color/colorCourse"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground" />

            <Button
                android:id="@+id/btnCourse12"
                android:layout_width="match_parent"
                android:text="@string/course12"
                android:layout_height="25dp"
                android:background="@drawable/langage"
                android:scaleType="fitCenter"
                android:paddingLeft="20dp"
                android:textColor="@color/colorCourse"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutAds"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorWhite">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/unitid"
            ads:layout_constraintLeft_toRightOf="parent"
            ads:layout_constraintRight_toLeftOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent">
        </com.google.android.gms.ads.AdView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>